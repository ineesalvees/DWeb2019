extends layout

block content
    .w3-container.w3-section
        .w3-card-4
            header.w3-container.w3-cyan
                h3.w3-left Lista de Filmes
                button.w3-btn.w3-light-blue.w3-right(style="margin-top:0.5%" onclick="window.location.assign('/filmes/add')") Adicionar Filme

            .w3-container
                table.w3-table-all.w3-section
                    tr
                        th Título
                        th Ano
                        th Elenco
                        th Géneros
                        th Operações
                    each f in filmes
                        tr
                            td= f.title
                            td= f.year
                            td
                                each c in f.cast
                                    li= c
                            td  
                                each g in f.genres
                                    li= g
                            td
                                button.w3-btn(onclick="window.location.assign('/filmes/" + f._id + "')" class='fa fa-info')
                                button.w3-btn(onclick="eliminar('" + f._id + "')" class='fa fa-trash')
                                button.w3-btn(onclick="window.location.assign('/filmes/update/" + f._id + "')" class='fa fa-edit')
