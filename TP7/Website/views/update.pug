extends layout

block content
    .w3-container.w3-section
        .w3-card-4
            header.w3-container.w3-cyan
                h3 Atualizar Filme
            form.w3-container(action="/filmes" method="POST")
                input.w3-input.w3-border.w3-section.w3-light-grey(id="title" type="text" name="title" value=film.title)
                input.w3-input.w3-border.w3-section.w3-light-grey(id="year" type="text" name="year" value=film.year)
                input.w3-input.w3-border.w3-section.w3-light-grey(id="cast" type="text" name="cast" value=film.cast)
                input.w3-input.w3-border.w3-section.w3-light-grey(id="genres" type="text" name="genres" value=film.genres)
                button.w3-btn.w3-border.w3-margin-bottom.w3-right.w3-cyan(onclick="atualizar('" + film._id + "')") Atualizar

        .w3-container.w3-cyan
            footer.w3-container
                p
                    a(href="/") Voltar à página principal
