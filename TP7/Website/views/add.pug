extends layout

block content
    .w3-container.w3-section
        .w3-card-4
            header.w3-container.w3-cyan
                h3 Adicionar Filme
            form.w3-container(action="/filmes" method="POST")
                input.w3-input.w3-border.w3-section.w3-light-grey(type="text" name="title" placeholder="Título")
                input.w3-input.w3-border.w3-section.w3-light-grey(type="text" name="year" placeholder="Ano")
                input.w3-input.w3-border.w3-section.w3-light-grey(type="text" name="cast" placeholder="Elenco")
                input.w3-input.w3-border.w3-section.w3-light-grey(type="text" name="genres" placeholder="Género")
                input.w3-btn.w3-border.w3-margin-bottom.w3-right.w3-cyan(type="submit" value="Criar")

        .w3-container.w3-cyan
            footer.w3-container
                p
                    a(href="/") Voltar à página principal
