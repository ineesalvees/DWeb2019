extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Novo Alunos
            .w3-container
                form.w3-container(action='/' method='POST')
                    label
                        b Tarefa
                    input.w3-input.w3-border.w3-light-grey(type="text" name="tarefa")
                    label
                        b Tipo de tarefa
                    input.w3-input.w3-border.w3-light-grey(type="text" name="tipo")
                    label
                        b Data Limite
                    input.w3-input.w3-border.w3-light-grey(type="text" name="data")
                    input.w3-btn.w3-blue-grey(type="submit" value="Enviar")
        .w3-card-4
            table.w3-table-all
                tr
                    th Tarefa
                    th Tipo de tarefa
                    th Data Limite
                    th Operações
                each a in lista
                    tr
                        td=a.tarefa
                        td=a.tipo
                        td=a.data
                        td
                            button.w3-button.w3-circle.w3-blue-grey(onclick="apagaItem('" + a.tarefa +"')")

        footer.w3-container.w3-teal
            address Gerado por Gestão de Tarefas App    

                